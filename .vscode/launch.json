    "version": "0.2.0",
    "configurations": [
        {
            "name": "Training",
            "type": "python",
            "request": "launch",
            "program": "./train.py",
            "args": [
                "-cn",
                "exp_kitti_360_base"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "launch: eval.py (occ)",
            "type": "python",
            "request": "launch",
            "program": "eval.py",
            "args": [
                "-cn",
                "eval_lidar_occ"
            ],
            "cwd": "${workspaceFolder}",
            // "python": "${workspaceFolder}../../miniconda3/envs/bts_m/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}../../miniconda3/envs/bts_m/lib/python3.10/site-packages/"
            },
            "stopOnEntry": false,
            "justMyCode": true
        },
        {
            "name": "launch_debug: train.py",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "args": [
                "-cn",
                "exp_kitti_360_DFT_debug"
            ],
            "cwd": "${workspaceFolder}",
            // "python": "${workspaceFolder}../../miniconda3/envs/bts_m/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}../../miniconda3/envs/bts_m/lib/python3.10/site-packages/"
            },
            "stopOnEntry": false,
            "justMyCode": true
        },
        {
            "name": "Attach: train_debug_remote_IDE",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "node11", // replace this with remote machine name
                "port": 42825 // accessing to the allowed port from the remote machine
            }
